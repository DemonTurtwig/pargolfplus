<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="recordScore30VM" type="com.pgp.app.modules.recordscore30.data.viewmodel.RecordScore30VM"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearRecordScore3"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearProfile"
                style="@style/groupStylewhite_A700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageArrowleft"
                    android:layout_width="@dimen/_7pxh"
                    android:layout_height="@dimen/_13pxh"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrowleft" />

                <TextView
                    android:id="@+id/txtPlayer"
                    style="@style/txtInterbold20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_55pxh"
                    android:layout_marginTop="@dimen/_32pxv"
                    android:layout_marginEnd="@dimen/_58pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{recordScore30VM.recordScore30Model.txtPlayer}"
                    tools:text="@string/lbl_player" />

                <LinearLayout
                    android:id="@+id/linearRowrectangleten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearColumntitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_31pxh"
                        android:layout_marginTop="@dimen/_14pxv"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_weight="0.59"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtClub"
                            style="@style/txtIntersemibold16_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtNamePlayer}"
                            tools:text="@string/lbl_philip_low" />

                        <LinearLayout
                            android:id="@+id/linearIndex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4pxv"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hcpvalueText"
                                style="@style/txtInterregular14_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{recordScore30VM.recordScore30Model.txtZero}"
                                tools:text="@string/lbl_00" />

                            <TextView
                                android:id="@+id/txt31hcp"
                                style="@style/txtInterregular14_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3pxh"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="HCP"
                                tools:text="@string/lbl_hcp" />

                            <View
                                android:id="@+id/viewDot"
                                android:layout_width="@dimen/_2pxh"
                                android:layout_height="@dimen/_2pxh"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_marginTop="@dimen/_7pxv"
                                android:layout_marginBottom="@dimen/_7pxv"
                                android:background="@drawable/rectangle_bg_gray_400_radius_1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/lineLine"
                    android:layout_width="@dimen/_333pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:background="@color/white_A700" />
            </LinearLayout>

            <View
                android:id="@+id/lineLineOne"
                android:layout_width="@dimen/_378pxh"
                android:layout_height="@dimen/_1pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_27pxv"
                android:background="@color/bluegray_50" />

            <FrameLayout
                android:id="@+id/frameStacktitlebar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_515pxv"
                android:layout_marginBottom="@dimen/_20pxv"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/linearTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearTitleBar"
                        style="@style/groupStylewhite_A700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_3pxh"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitleBar"
                            style="@style/txtInterbold20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_64pxh"
                            android:layout_marginTop="@dimen/_21pxv"
                            android:layout_marginEnd="@dimen/_54pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtTitleBar}"
                            tools:text="@string/lbl_score" />

                        <View
                            android:id="@+id/lineLineTwo"
                            android:layout_width="@dimen/_390pxh"
                            android:layout_height="@dimen/_1pxv"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:background="@color/white_A700" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRowlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_58pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_185pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageLocation"
                            android:layout_width="@dimen/_15pxh"
                            android:layout_height="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_location"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_location" />

                        <TextView
                            android:id="@+id/txtLanguage"
                            style="@style/txtInterbold32"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.55"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtLanguage}"
                            tools:text="@string/lbl_hole2" />

                        <TextView
                            android:id="@+id/valuePar10"
                            style="@style/txtInterbold32_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6pxh"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_weight="0.33"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.HoleId}"
                            tools:text="@string/lbl_01" />
                    </LinearLayout>

                    <View
                        android:id="@+id/lineLineThree"
                        android:layout_width="@dimen/_378pxh"
                        android:layout_height="@dimen/_2pxv"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_15pxh"
                        android:layout_marginTop="@dimen/_39pxv"
                        android:background="@color/bluegray_50" />

                    <LinearLayout
                        android:id="@+id/linearRowstrokes"
                        style="@style/groupStylewhite_A700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_31pxv"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtStrokes"
                            style="@style/txtIntersemibold18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_22pxv"
                            android:layout_marginBottom="@dimen/_19pxv"
                            android:layout_weight="0.37"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtStrokes}"
                            tools:text="@string/lbl_strokes" />

                        <LinearLayout
                            android:id="@+id/linearRowshape"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_144pxh"
                            android:layout_marginTop="@dimen/_14pxv"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_marginBottom="@dimen/_14pxv"
                            android:layout_weight="0.63"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnMinus"
                                android:layout_width="@dimen/_32pxh"
                                android:layout_height="@dimen/_32pxh"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:background="@drawable/rectangle_border_gray_400_radius_16"
                                app:srcCompat="@drawable/img_arrowleft" />

                            <TextView
                                android:id="@+id/strokevalue1"
                                android:layout_width="@dimen/_36pxh"
                                android:layout_height="@dimen/_36pxh"
                                android:layout_marginLeft="@dimen/_10pxv"
                                android:background="@color/bluegray_50"
                                android:text="@{recordScore30VM.recordScore30Model.score}"
                                android:textAlignment="center"
                                android:textSize="@dimen/_18pxh" />

                            <ImageButton
                                android:id="@+id/btnPlus"
                                android:layout_width="@dimen/_32pxh"
                                android:layout_height="@dimen/_32pxh"
                                android:layout_marginStart="@dimen/_8pxh"
                                android:layout_marginBottom="@dimen/_2pxv"
                                android:background="@drawable/rectangle_border_gray_400_radius_16"
                                android:paddingHorizontal="@dimen/_10pxh"
                                android:paddingVertical="@dimen/_10pxv"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_arrowright"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRowhowmanywerep"
                        style="@style/groupStylewhite_A700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtHowmanywerep"
                            style="@style/txtIntersemibold18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_14pxv"
                            android:layout_marginBottom="@dimen/_18pxv"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtHowmanywerep}"
                            tools:text="@string/lbl_par2" />

                        <TextView
                            android:id="@+id/parvalue1"
                            android:layout_width="@dimen/_36pxh"
                            android:layout_height="@dimen/_36pxh"
                            android:layout_marginStart="@dimen/_207pxh"
                            android:layout_marginEnd="@dimen/_60pxh"
                            android:background="@color/bluegray_50"
                            android:text="@{recordScore30VM.recordScore30Model.txtPar}"
                            android:textAlignment="center"
                            android:textSize="@dimen/_18pxh" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearRowpenalties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_marginEnd="@dimen/_12pxh"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtPenalties"
                            style="@style/txtIntersemibold18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20pxv"
                            android:layout_marginBottom="@dimen/_4pxv"
                            android:layout_weight="0.57"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtPenalties}"
                            tools:text="@string/lbl_index" />

                        <TextView
                            android:id="@+id/indexvalue"
                            android:layout_width="@dimen/_36pxh"
                            android:layout_height="@dimen/_36pxh"
                            android:layout_marginStart="@dimen/_207pxh"
                            android:layout_marginEnd="@dimen/_50pxh"
                            android:background="@drawable/rectangle_bg_bluegray_50_radius_8"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingStart="@dimen/_13pxh"
                            android:paddingTop="@dimen/_8pxv"
                            android:paddingEnd="@dimen/_13pxh"
                            android:paddingBottom="@dimen/_8pxv"
                            android:singleLine="true"
                            android:text="@{recordScore30VM.recordScore30Model.txtIndex"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18pxh" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBottom"
                    style="@style/groupStylewhite_A700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="@dimen/_40pxv"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/lineLineFive"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_gravity="start"
                        android:layout_marginBottom="@dimen/_10pxh"
                        android:background="@color/bluegray_50" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnGoToNextHoleOne"
                        style="@style/btnSolidRounded_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_marginEnd="@dimen/_25pxh"
                        android:alpha="100"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_15pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingBottom="@dimen/_15pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_go_to_next_hole"
                        android:textAllCaps="false"
                        tools:text="@string/lbl_go_to_next_hole" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</layout>
